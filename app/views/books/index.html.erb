<%= flash[:alert] %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show",book_path(book.id) %></th>
      <th><%= link_to "Edit",edit_book_path(book.id) %></th>
      <th><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"  %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<% if @book.errors.any? %>
  <div>
    <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>
